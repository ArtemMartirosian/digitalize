generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String   @id @default(cuid())
  userId            String   @map("user_id")
  type              String
  provider          String
  providerAccountId String   @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique @default(cuid())
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Account   Account[]
  Session   Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model Technology {
  id       String @id @default(cuid())
  image    String
  imageKey String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("technologies")
}

model About {
  id        String   @id @default(cuid())
  about_en  String
  about_ru  String
  about_am  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about")
}

model Service {
  id        String   @id @default(cuid())
  name      String   @unique
  price     String
  features  String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("services")
}

model Team {
  id                 String   @id @default(cuid())
  firstName          String
  lastName           String
  professionPosition String
  companyPosition    String?
  image              String
  imageKey           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("team")
}

model Portfolio {
  id        String   @id @default(cuid())
  name      String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("portfolio")
}
